{
  "name": "voxity",
  "productName": "Voxity",
  "version": "1.3.0",
  "description": "An opinionated, intuitive, lightweight local music player written in JavaScript",
  "main": "main.js",
  "author": "exerinity <me@exerinity.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/exerinity/voxity.electron"
  },
  "homepage": "https://voxity.dev",
  "scripts": {
    "dev": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder -w",
    "dist:linux": "electron-builder -l"
  },
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.exerinity.voxity",
    "productName": "Voxity",
    "asar": true,
    "files": [
      "main.js",
      "build/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "APP.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Audio",
      "icon": "voxity.png",
      "desktop": {
        "StartupWMClass": "voxity"
      }
    },
    "mac": {
      "target": []
    }
  }
}